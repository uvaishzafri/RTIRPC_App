<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bgColor"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.CardView
            android:layout_alignParentTop="true"
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:orientation="vertical"
                tools:context="com.example.yumnaasim.rtirpc.StatsActivity$PlaceholderFragment">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/txt1"
                    android:textColor="@android:color/black"
                    android:text="@string/del_title"/>
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/del_subtxt"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/cv1"
        android:layout_marginTop="16dp"
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            tools:context="com.example.yumnaasim.rtirpc.StatsActivity$PlaceholderFragment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/txt3"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/space_txt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="0"/>

                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="KB"/>
            </LinearLayout>

            <ProgressBar
                android:layout_marginTop="16dp"
                android:id="@+id/progressBar2"
                android:max="90"
                android:progress="45"
                android:scaleY="8"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="@string/db_txt"/>

                <TextView
                    android:id="@+id/db_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1.8 GB"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="@string/db_txt2"/>

                <TextView
                    android:id="@+id/current_db_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="35%"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="@string/db_txt3"/>

                <TextView
                    android:id="@+id/free_db_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="355 MB"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <info.hoang8f.widget.FButton
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:textColor="@android:color/white"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:buttonColor="@color/colorPrimary"
            app:shadowEnabled="true"
            app:shadowColor="@android:color/black"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:id="@+id/buttonClear"
            />
    </RelativeLayout>







